<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/pnlNoticias"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="@color/MenuPItems"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/txtTitulo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/imgNoticia"
            android:text="Olá Titulo"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <ImageView
            android:id="@+id/imgNoticia"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add">

        </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignEnd="@+id/txtTitulo"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/imgNoticia"
            android:text="Olá Mensagem"
            android:id="@+id/txtMensagem"
            android:background="@color/blue"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
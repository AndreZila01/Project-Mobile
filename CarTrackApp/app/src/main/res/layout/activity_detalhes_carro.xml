<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="android:"
    tools:context=".DetalhesCarrosActivity">

  <TextView
      android:id="@+id/textViewModelo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginBottom="20dp"
      android:text="Modelo:"
      app:layout_constraintBottom_toTopOf="@+id/textViewMatricula"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/textViewCilindrada"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginBottom="30dp"
      android:text="Cilindrada:"
      app:layout_constraintBottom_toTopOf="@+id/textViewSistema_de_tracao"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewPeso"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginBottom="28dp"
      android:text="Peso:"
      app:layout_constraintBottom_toTopOf="@+id/textViewPotencia"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewMarca"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginBottom="30dp"
      android:text="Marca:"
      app:layout_constraintBottom_toTopOf="@+id/textViewCilindrada"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewConsumo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:text="Consumo:"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="593dp" />

  <TextView
      android:id="@+id/textViewMatricula"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginBottom="30dp"
      android:text="Matricula:"
      app:layout_constraintBottom_toTopOf="@+id/textViewMarca"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewPotencia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginBottom="28dp"
      android:text="Potencia"
      app:layout_constraintBottom_toTopOf="@+id/textViewConsumo"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewSistema_de_tracao"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginBottom="24dp"
      android:text="Sistema de Tração:"
      app:layout_constraintBottom_toTopOf="@+id/textViewPeso"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="206dp"
      android:layout_height="174dp"
      app:srcCompat="@drawable/car"
      tools:layout_editor_absoluteX="16dp"
      tools:layout_editor_absoluteY="18dp" />
</androidx.constraintlayout.widget.ConstraintLayout>